#QUESTION 4

import random


choices = ['rock', 'paper', 'scissors']
userScore = 0
computerScore = 0
end = False

while(end != True):
    correct = False
    while(correct != True):
        userChoice = int(input("ENTER 1 TO CHOOSE ROCK\nENTER 2 TO CHOOSE PAPER\nENTER 3 TO CHOOSE SCISSORS: "))

        if(userChoice == 1):
            userChoice = 'rock'
            correct = True
        elif(userChoice == 2):
            userChoice = 'paper'
            correct = True
        elif(userChoice == 3):
            userChoice = 'scissors'
            correct = True
        else:
            print("INVALID INPUT, CHOOSE AGAIN!")
                           
    print("USER SELECTED: ", userChoice)
    computerChoice = choices[random.randint(0,2)]
    print("COMPUTER SELECTED: ", computerChoice)
    
    if(userChoice == computerChoice):
        print("GAME IS A TIE!")
        userScore += 100
        computerScore += 100
    
    elif(userChoice == 'rock' and computerChoice == 'paper'):
        print("COMPUTER WINS!")
        end = True
        computerScore += 100
    
    elif(userChoice == 'rock' and computerChoice == 'scissors'):
        print("YOU WIN!")
        end = True
        userScore += 100
                           
    elif(userChoice == 'paper' and computerChoice == 'rock'):
        print("YOU WIN!")
        end = True
        userScore += 100
                           
    elif(userChoice == 'scissors' and computerChoice == 'rock'):
        print("COMPUTER WINS!")
        end = True
        computerScore += 100
    
    elif(userChoice == 'paper' and computerChoice == 'scissors'):
        print("COMPUTER WINS!")
        end = True
        computerScore += 100
                           
    elif(userChoice == 'scissors' and computerChoice == 'paper'):
        print("YOU WIN!")
        end = True
        userScore += 100
        
    print("COMPUTER SCORE: ", computerScore)
    print("USER SCORE: ", userScore)
    
    if(end == True):
        correct = False
        while(correct != True):
                option = int(input("DO YOU WANT TO PLAY AGAIN? ENTER 1 FOR YES AND ENTER 2 FOR NO: "))
                if(option == 1):
                    end = False
                    correct = True
                elif(option == 2):
                    print("GAME TERMINATED SUCCESSFULLY!")
                    break
                else:
                    print("INVALID INPUT!")
                    
        
        
    

